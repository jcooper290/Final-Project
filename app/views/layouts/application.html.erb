<!DOCTYPE html>
<html>
  <head>
    <title>Course Scheduler</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg  bg-dark">
    <%= link_to 'All Courses', books_path, class:"nav-link"%>
    
    <% if current_user && current_user.admin %>
      <%= link_to 'Add Course', new_book_path, class:"nav-link "%>
    <% end %>
    
    
    <div class="signupbtn">
      <% if current_user %>
      <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class:"btn btn-success"%>
      <% else %>
      <%= link_to 'Sign Up', new_user_registration_path, class:"btn btn-success"%>
      <%= link_to 'Sign In', new_user_session_path, class:"btn btn-success"%>
      <% end %>
    </div>
  </nav>
  
  <%= render 'layouts/alerts' %>
   
    <%= yield %>
  </body>
</html>
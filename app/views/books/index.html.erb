<p id="notice"><%= notice %></p>

<h1 style="margin: 1rem;">Courses</h1>

  <table style="margin: 1rem; width: 95%" class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">Course</th>
        <th scope="col">Description</th>
        <th scope="col">Professor</th>
      </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
          <th scope="row"><%= book.title %></th>
          <td><%= book.descr %></td>
          <td><%= book.author.name %></td>
          <% if current_user %>
            <td><%= link_to 'Leave', edit_book_path(book), class:"btn btn-outline-primary"%></td>
            <td><%= link_to 'Join', book, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-outline-primary"%></td>
          <% end %>
          <% if current_user && current_user.admin %>
            <td><%= link_to 'Edit', edit_book_path(book), class:"btn btn-outline-primary"%></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-outline-primary"%></td>
          <% end %>
        </tr>
        <% end %>
    </tbody>
  </table>
